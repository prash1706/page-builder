header(role='banner', aria-labelledby='ibm-pagetitle-h1', class=(setting.lead==1)?"nst_mlp-m010-m-01-leadspace-reference":(setting.lead==3)?"nst_mlp-m010-m-03-leadspace-small":"nst_mlp-m010-m-02-leadspace-video")
  if setting.lead == 1
    #ibm-leadspace-head(data-widget="parallaxscroll", class="ibm-alternate", style="background-image:url(#{lead.imgUrl});")
      #ibm-leadspace-body.ibm-padding-top-r2.ibm-padding-bottom-r2.ibm-alternate.ibm-alternate-background
        .ibm-columns
         .ibm-col-6-3.ibm-col-medium-4-3
            h1.ibm-h1.ibm-light= lead.headline
            .ibm-padding-top-1.ibm-h3.ibm-light= lead.subhead
            p.ibm-button-link.ibm-padding-top-2
              a.ibm-btn-pri.ibm-btn-orange-50(href="#{lead.catUrl}")= lead.cat
  else if setting.lead == 2
    #ibm-leadspace-head(class="ibm-alternate-background ibm-video-background", style="background:url(#{lead.imgUrl});")
      #ibm-leadspace-body.ibm-padding-top-r2.ibm-padding-bottom-r2.ibm-alternate.ibm-alternate-background
        .ibm-columns
         .ibm-col-6-3.ibm-col-medium-4-3
            h1.ibm-h1.ibm-light= lead.headline
            .ibm-padding-top-1.ibm-h3.ibm-light= lead.subhead
            p.ibm-button-link.ibm-padding-top-2
              a.ibm-btn-pri.ibm-btn-orange-50(href="#{lead.catUrl}")= lead.cat
      .ibm-video-background-container.ibm-hidden-small.ibm-hidden-medium
        video(autoplay, loop, muted,style="width: 100%;")
          source(src="#{lead.videoUrl}", type="video/mp4")
