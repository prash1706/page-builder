    #ibm-leadspace-head(class="ibm-alternate ibm-alternate-background", style="background:url(#{lead.imgUrl}) center / cover no-repeat;")
      #ibm-leadspace-body.ibm-padding-bottom-1.ibm-padding-top-1
        .ibm-columns
          .ibm-col-6-4.ibm-padding-top-1
            h1.ibm-h1.ibm-light.ibm-padding-bottom-0= lead.headline
            p.ibm-h4.ibm-light.ibm-padding-bottom-2= lead.subhead
            p.ibm-btn-row
              a.ibm-btn-pri.ibm-btn-orange-50(href="#{lead.catUrl}")= lead.cat
